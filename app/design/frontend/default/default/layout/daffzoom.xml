<?xml version="1.0"?>
<!--
/**
 * Daffodil zoom
-->
<layout>
    <default>
        <reference name="head">
            <action method="addJs"><script>daffzoom/jquery.js</script></action>
            
         <action method="addJs"><script>daffzoom/jquery.imageLens.js</script></action>
        </reference>
    </default>
 <catalog_product_view>
        	 <reference name="product.info.media">
            <action method="setTemplate" ifconfig="zoom/all_settings/enabled">
                <template>zoom/media.phtml</template>
            </action>
        </reference>
 </catalog_product_view>
    <review_product_list>
        <reference name="product.info.media">
            <action method="setTemplate" ifconfig="zoom/all_settings/enabled">
                <template>zoom/media.phtml</template>
            </action>
        </reference>
    </review_product_list>
</layout>
